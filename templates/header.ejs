			@font-face {
				font-display: swap;
				font-family: 'IBM Plex Sans';
				font-style: normal;
				font-weight: bold;
				src:
					url('<%= config.siteUrl %>/assets/IBMPlexSans-Bold-Latin1.woff2') format('woff2');
			}

			@font-face {
				font-display: swap;
				font-family: 'IBM Plex Sans';
				font-style: normal;
				font-weight: normal;
				src:
					url('<%= config.siteUrl %>/assets/IBMPlexSans-Text-Latin1.woff2') format('woff2');
			}

			@font-face {
				font-display: swap;
				font-family: 'IBM Plex Sans';
				font-style: italic;
				font-weight: normal;
				src:
					url('<%= config.siteUrl %>/assets/IBMPlexSans-TextItalic-Latin1.woff2') format('woff2');
			}

			html {
				line-height: 1.3;
				margin: 0 1em;
			}

			body {
				font-family: 'IBM Plex Sans', 'Helvetica Neue', Arial, sans-serif;
				font-size: 1.2em;
				margin: 3em auto;
				max-width: 45rem;
			}

			h1,
			h2,
			h3,
			h4,
			h5,
			h6 {
				margin: 1.5em 0 1em 0;
			}

			a {
				color: #00c;
			}

			article footer {
				color: #666;
				font-size: 0.9em;
			}

			article img {
				height: auto;
				width: 100%;
			}

			.title {
				height: 1px;
				left: -10000px;
				overflow: hidden;
				position: absolute;
				top: auto;
				width: 1px;
			}

			.logo {
				height: 48px;
				margin: 4em 0;
				width: 48px;
			}

			.about,
			.archive {
				margin: 4em 0;
			}

			.current a {
				text-decoration-style: double;
				-webkit-text-decoration-style: double;
			}

			.tag {
				margin-left: 3px;
			}
		</style>
	</head>

